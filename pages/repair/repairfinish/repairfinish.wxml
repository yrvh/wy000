<!--pages/repair/repairfinish/repairfinish.wxml-->
<!-- 添加报修的按钮 -->
<view class="repair-add" bindtap="handleAddRepair">+报修</view>

<!-- 导入数据处理函数 -->
<wxs src="../../wxs/fStr.wxs" module="fStr"> </wxs>

<view class="repairfinish-box" wx:for="{{img_arr.length}}" wx:key="index">
  <view class="repairfinish-img">
    <image src="{{fStr.formatStr(img_arr)[index]}}"></image>
  </view>
  <view class="repairfinish-content">
    <view class="house">房间号:东方名都(6#601)</view>
    <view>报修人:蓝灵儿(17878780000)</view>
    <view>报修区域:业主室内</view>
    <view>报修问题:马桶坏了</view>
    <view class="date">提交时间: 2019-02-10, 15:23</view>
  </view>
</view>

<!-- 引入自定义的tabbar -->
<custom-tabbar list="{{list}}" active_index="{{active_index}}" cst-tabbar="cst-tabbar2" act-img="act-img2" act-text="act-text2" bind:tabbarEvent=""/>
