/* pages/rent/rent.wxss */
page {background-color:#fefefe; padding-bottom: 10vh;}

/* 页面的tabbar样式 */
.cst-tabbar2 {background-color: rgba(230, 230, 230, 0.9) !important;}
.act-img2 {color:var(--rent_color) !important;}
.act-text2 {color:var(--rent_color) !important;}

/* 找房页面的样式 */
.rent-seektop {width: 100%; line-height: 70rpx; position: fixed; left: 0; top: 0; z-index: 5; color: #fff; border-bottom: 1rpx solid var(--rent_color); background-color: rgba(230, 230, 230, 0.3);}
.rent-seektop-place {width: 100%; height: 70rpx; background-color: #222;}

.rent-seekbox {height: 428rpx; margin-bottom: 20rpx; position: relative;}
.rent-seekbox image {width: 750rpx; height: 100%;}
.rent-seekbox .rent-information { position: absolute; right: 16rpx; top:214rpx; color: #fbfbfb; font-size: 60rpx;}
.rent-seekbox .rent-information:active {color: var(--rent_color);}

.rent-dialog {width: 280rpx; height: 340rpx; background-color: rgba(250,250,250,0.6); position: absolute; top: 40rpx; right: 84rpx; padding: 16rpx; color: #222;}
.dialog-title {line-height: 50rpx; font-size: 30rpx; font-weight: 600;}
.dialog-size {line-height: 50rpx; font-size: 22rpx; color: #666;}
/* .dialog-tag {margin-bottom: 15rpx;} */
.dialog-price {line-height: 70rpx; font-size: 32rpx; color: #e33; border-top: 1rpx solid #999;}


/* 房屋发布 */
.rent-issue {background-color: aqua;}


/* 我的发布记录 */
.rent-top {width:100%; line-height: 80rpx; font-size: 38rpx; background-color: #fff; position: fixed; left: 0; top: 0; z-index: 5; border-bottom: 1rpx solid #aaa; color: var(--rent_color);}
.rent-top-place {height: 80rpx; margin-bottom: 30rpx;}

.rent-record {padding: 0 40rpx; background-color: #fff; position: relative;}
.rent-recordbox {border-bottom: 1rpx solid rgb(161, 146, 146); padding: 15rpx 0; display: flex; justify-content: space-between;}
.rent-recordbox image {width: 240rpx; height: 137rpx;}
.rent-recordbox .record-content {flex: 1; padding-left: 36rpx;}

.rent-recordbox .record-title {line-height: 50rpx; font-size: 30rpx; font-weight: 600; color: #0081df;}
.rent-recordbox .record-size {line-height: 46rpx; font-size: 22rpx; color: #666;}
.rent-recordbox .record-price {font-size: 32rpx; color: #e33;}