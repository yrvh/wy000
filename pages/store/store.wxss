/* pages/store/store.wxss */
page {background-color: #fff; padding-bottom: 9vh;}

/* 页面的tabbar样式 */
.cst-tabbar2 {background-color: rgba(230, 230, 230, 0.9) !important;}
.act-img2 {color:var(--store_color) !important;}
.act-text2 {color:var(--store_color) !important;}

/* 顶部 */
.topcss {background-color: var(--store_color);} 
.self-location {line-height: 50rpx; background-color: var(--store_color); color: #fff; padding: 0 50rpx; display: flex; justify-content: flex-end;}
.location-name {display: inline-block; padding: 0 12rpx 0 4rpx;}

/* 热词 */
.store-hotword { width: 100%; height: 120rpx; background-color: var(--store_color); border-bottom-left-radius: 50% 20rpx; border-bottom-right-radius: 50% 20rpx;}
/* 美食页面的轮播图 */
.store-swipers {height: 230rpx; width: 86%; border-radius: 14rpx; position: relative; margin: -120rpx auto 0; box-shadow: 0 6rpx 10rpx 0 #999;}
.store-swipers image { height: 230rpx; width: 100%; border-radius: 14rpx; overflow: hidden;}
.swipers {height: 100%;border-radius: 14rpx; overflow: hidden;}

/* 中部导航 */
.nav-container {width: 750rpx; margin: 46rpx 0 15rpx; padding: 0 10rpx;}
.nav-container-place {width: 750rpx; position: fixed; top: 79rpx; z-index: 20; background-color: #fff; padding: 0 10rpx;}
/* 美食页面的筛选 */
.store-select {height: 40rpx; margin-bottom: 14rpx; display: flex; justify-content: space-between; border-bottom: 1rpx solid #ddd; color: #555;}

/* 内容展示部分 */
.store-content {padding: 0 10rpx;}

