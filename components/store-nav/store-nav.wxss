/* components/store-nav/store-nav.wxss */
.store-nav {width: 100%; white-space: nowrap; overflow: hidden;}
.store-nav .nav-item {display: inline-block; margin-right: 32rpx;}

.store-nav .nav-item .nav-item-img {display: block; width: 70rpx; height: 70rpx; margin: 0 auto;  box-shadow: 0 5rpx 5rpx 0 #999; border-radius: 50%;}

.store-nav .nav-item .nav-item-title {display: inline-block; width: 100%; text-align: center;  font-size: 30rpx; color: #555; margin: 10rpx 0;}

.nav-active .nav-item-img {width: 80rpx !important; height: 80rpx !important;}
.nav-active .nav-item-title {color: var(--store_color) !important;}
.nav-active .nav-item-underline {width: 100%; height: 4rpx; border-radius: 2rpx; background-color: var(--store_color);}